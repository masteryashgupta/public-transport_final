# Server Configuration
PORT=3000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/public-transport
# Or use MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/public-transport

# JWT Secret (generate a random string)
JWT_SECRET=your_jwt_secret_key_here_change_this_in_production
JWT_EXPIRE=7d

# Google Maps API Key (for backend validation if needed)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:19006

# Location Update Settings
LOCATION_UPDATE_INTERVAL=5000  # milliseconds (5 seconds)
MAX_LOCATION_HISTORY=100       # number of locations to keep in memory
